{
    "compilerOptions": {
        "module": "esnext",
        "jsx": "preserve",
        "noEmit": true,
        "lib": ["es2018", "dom"],
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "esModuleInterop": true,
        "target": "es5",
        "allowJs": true,
        "skipLibCheck": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["src"]
}
